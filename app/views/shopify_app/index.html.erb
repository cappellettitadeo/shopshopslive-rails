<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <meta name="description" content="">
  <meta name="author" content="">
  <!--link rel="icon" href="../../../../favicon.ico"-->

  <title>Shopshops Authentication</title>

  <!-- Bootstrap core CSS -->
  <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet">
  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

  <!-- Custom styles for this template -->
  <!--link href="signin.css" rel="stylesheet"-->
  <%= stylesheet_link_tag 'application' %>
  <script type="text/javascript">
      function showLoading() {
          let icLoading = document.getElementById("ic-loading");
          icLoading.style.display = "inline-block";
      }
  </script>
  <style>
    html,
    body {
      height: 100%;
      font-family: 'PingFangSC-Regular'
    }

    body {
      display: -ms-flexbox;
      display: flex;
      -ms-flex-align: center;
      align-items: center;
      background-color: #f5f5f5;
      background-image: url("https://res.cloudinary.com/hyyxofhbh/image/upload/v1531112544/production/shopshops/assets/video_thumbnail1.jpg");
      background-repeat: no-repeat;
      background-size: cover;
    }

    .form-install {
      width: 50%;
      padding: 15px;
      margin: auto;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: flex-start;
      box-sizing: border-box;
    }
    .connect-txt{
      margin-top: 10%;
      font-weight: bold;
      font-size: 40px;
      color: white;
    }
    .form-install .form-control {
      position: relative;
      box-sizing: border-box;
      height: auto;
      padding: 10px;
      font-size: 16px;
    }
    .form-install .form-control:focus {
      z-index: 2;
    }
    .form-install input[type="url"] {
      margin-bottom: -1px;
      width: 100%;
      border-bottom-right-radius: 0;
      border-bottom-left-radius: 0;
    }
    .btn{
      margin-left: 20px;
      width: 20%;
    }
    .wrapper-url-input-btn{
      width: 100%;
      display: flex;
      flex-direction: row;
      align-items: flex-end;
      margin-top: 10%;
    }
    .div-1{
      width: 80%;
      display: flex;
      flex-direction: column;
      align-items: flex-start;
    }
    .pls-enter-txt{
      margin-bottom: 10px;
      font-weight: 400;
      font-size: 20px;
      color: white;
    }
    .copyright-txt{
      color: white;
      margin-top: 10%;
      font-size: 16px;
    }
    .ic-loading{
      font-size:20px;
      margin-right:5px;
      display: none;
    }
    </style>
  </head>

<body class="text-center">
<form class="form-install" action="/shopify_app/install" accept-charset="UTF-8" method="get" onsubmit="showLoading()">
  <img class="mb-4" src="http://res.cloudinary.com/hyyxofhbh/image/upload/v1531111696/production/shopshops/assets/icon.png" alt="" width="100" height="100">
  <h1 class="connect-txt">Connect with Shopshops today</h1>
  <div class="wrapper-url-input-btn">
    <div class="div-1">
      <h1 class="pls-enter-txt">Please enter your Shopify domain</h1>
      <input type="text" id="inputUrl" class="form-control" placeholder="my-shop.myshopify.com" required autofocus name="shop">
    </div>
    <button class="btn btn-lg btn-primary btn-block" type="submit"><i class="ic-loading fa fa-refresh fa-spin" id="ic-loading"></i>Connect</button>
  </div>
  <p class="copyright-txt" style="color: white;">&copy; Shopshops Inc. 2020</p>
</form>
</body>
</html>

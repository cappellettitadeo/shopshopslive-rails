<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <meta name="description" content="">
  <meta name="author" content="">
  <!--link rel="icon" href="../../../../favicon.ico"-->

  <title>Signin Template for Bootstrap</title>

  <!-- Bootstrap core CSS -->
  <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet">

  <!-- Custom styles for this template -->
  <!--link href="signin.css" rel="stylesheet"-->
  <%= stylesheet_link_tag 'application' %>
</head>

<body class="text-center">
<form class="form-install" action="/shopify_app/install" accept-charset="UTF-8" method="get">
  <img class="mb-4" src="https://getbootstrap.com/assets/brand/bootstrap-solid.svg" alt="" width="72" height="72">
  <h1 class="connect-txt">Connect with Shopshops today</h1>
  <div class="wrapper-url-input-btn">
    <div class="div-1">
      <h1 class="pls-enter-txt">Please enter your shopify domain</h1>
      <input type="text" id="inputUrl" class="form-control" placeholder="my-shop.myshopify.com" required autofocus name="shop">
    </div>
    <button class="btn btn-lg btn-primary btn-block" type="submit">Install</button>
  </div>
  <p class="copyright mt-5 mb-3 text-muted">&copy; 2018</p>
</form>
</body>
</html>